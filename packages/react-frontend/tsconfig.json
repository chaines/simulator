{
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "public/*"],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@simulation-engine/*": ["../sim-engine/src/*"],
      "src/*": ["./src/*"]
    },
    "moduleResolution": "Node",
    "target": "es2017",
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": false
  }
}
