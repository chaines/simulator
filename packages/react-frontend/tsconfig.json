{
  "include": ["src/**/*", "webpack.config.ts"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es2017",
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@simulation-engine/*": ["../sim-engine/src/*"],
      "src/*": ["src/*"]
    }
  }
}
